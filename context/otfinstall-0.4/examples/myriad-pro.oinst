

vendor      "adobe"
collection  "myriad"

# 'sans' or 'serif'
fontclass   "sans"

# Allowed variants are 'default', 'osf'
variants    %w(default osf)

# Supported faces are 'regular' 'bold' 'italic' and 'bolditalic'
regular     "MyriadPro-Regular.otf"
bold        "MyriadPro-Bold.otf"
italic      "MyriadPro-It.otf"
bolditalic  "MyriadPro-BoldIt.otf"
